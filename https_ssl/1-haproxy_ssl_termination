global
    log /dev/log local0
    log /dev/log local1 notice
    chroot /var/lib/haproxy
    user haproxy
    group haproxy
    daemon
    ca-base /etc/ssl/certs
    crt-base /etc/ssl/private

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    timeout connect 5000
    timeout client  50000
    timeout server  50000

frontend www-http
    bind *:80
    default_backend webservers

frontend www-https
    bind *:443 ssl crt /etc/haproxy/cert.pem
    default_backend webservers

backend webservers
    balance roundrobin
    server web-01 54.82.254.54:80 check
    server web-02 44.202.63.206:80 check
